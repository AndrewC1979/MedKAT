<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>SCRNamedEntityBase</name>
  <description/>
  <version>1</version>
  <vendor>IBM</vendor>
  <imports>
    <import name="org.ohnlp.medkat.scr.types.SCRSpannedAnnotation"/>
  </imports>
  <types>
    <typeDescription>
      <name>org.ohnlp.medkat.scr.types.SCRNamedEntityBase</name>
      <description>base class for SCR named entity types</description>
      <supertypeName>org.ohnlp.medkat.scr.types.SCRSpannedAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>Terminology</name>
          <description>Terminology identifier</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Code</name>
          <description>Code from terminology's vocabulary</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Negation</name>
          <description>boolean flag whether the site has been negated in context</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Inference</name>
          <description>Boolean flag whether the anatomical site properties has been inferred from context</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
