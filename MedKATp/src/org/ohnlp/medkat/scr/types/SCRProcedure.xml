<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>SCRProcedure</name>
  <description/>
  <version>1</version>
  <vendor>IBM</vendor>
  <imports>
    <import name="org.ohnlp.medkat.scr.types.SCRSpannedAnnotation"/>
  </imports>
  <types>
    <typeDescription>
      <name>org.ohnlp.medkat.scr.types.SCRProcedure</name>
      <description>Procedure object</description>
      <supertypeName>org.ohnlp.medkat.scr.types.SCRSpannedAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>Institution</name>
          <description>institution where prosedure was performed</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Date</name>
          <description>date of the procedure</description>
          <rangeTypeName>uima.tcas.Annotation</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Sites</name>
          <description>sites affected by the procedure</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Terminology</name>
          <description>Terminology identifier</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Code</name>
          <description>Code from terminology's vocablurary</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Modifiers</name>
          <description>modifiers for the anatomical site</description>
          <rangeTypeName>uima.cas.FSArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Negation</name>
          <description>boolean flag whether the site has been negated in context</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>Inference</name>
          <description>boolean flag whether the procedue properties has been infered from context</description>
          <rangeTypeName>uima.cas.Integer</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
